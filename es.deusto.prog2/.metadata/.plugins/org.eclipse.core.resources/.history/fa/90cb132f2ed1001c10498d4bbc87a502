package carreraCoches;

public class Coche {
	int count = 1;
	boolean stop = false;
	
	Thread t = new Thread(new Runnable() {
		@Override
		public void run() {
			// código del hilo
			stop = false;
			for (int i = 0; i < 100000000; i++) {
				if (stop) break; // Si se pulsa el botón stop, salimos del bucle
				tfCount.setText(count + "");
				++count;
			}
		}
	});
	
}
